<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= link_to "詳細を確認する", post_path(post.id) %></td>
        <td><%= link_to "編集する", edit_post_path(post.id) %></td>
        <td><%= link_to "削除する", post_path(post.id), method: :delete, data: { confirm: '本当に削除していいですか' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規投稿', new_post_path %>
